<table class="table table-striped">
  <thead>
    <th>Character ID</th>
    <th>Name</th>
    <th>Description</th>
    <th>Thumbnail</th>
    <th># of Comics Avail</th>
  </thead>
  <tbody>
    <% @characters.each do |c| %>
      <tr>
        <td><%= c['id'] %></td>
        <td><%= c['name'] %></td>
        <td width="400px"><%= c['description'] %></td>
        <td><a href='<%= c['thumbnail'].values.join(".") %>'>Image link</a></td>
        <td><%= c['comics']['available'] %></td>
      </tr>
    <% end %>
  </tbody>
</table>